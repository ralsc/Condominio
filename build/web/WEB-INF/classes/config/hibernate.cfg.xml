<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost/condominio</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="entidades.Usuario"/>
    <mapping class="entidades.Morador"/>
    <mapping class="entidades.Unidade"/>
    <mapping class="entidades.Fornecedor"/>
    <mapping class="entidades.Produto"/>
    <mapping class="entidades.Servico"/>
    <mapping class="entidades.Pagamento"/>
    <mapping class="entidades.ItemPedido"/>
    <mapping class="entidades.PedidoProduto"/>
    <mapping class="entidades.AgendamentoServico"/>
    <mapping class="entidades.Condominio"/>
    <mapping class="entidades.AtaReuniao"/>
    <mapping class="entidades.TaxaMulta"/>
    <mapping class="entidades.TipoTaxaMulta"/>
  </session-factory>
</hibernate-configuration>
